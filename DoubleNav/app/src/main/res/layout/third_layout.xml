<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DETAILS"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material"
            android:background="#d8b8b8"
            android:padding="@dimen/abc_action_bar_content_inset_material" />

        <EditText
            android:id="@+id/pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_alignParentStart="true"
            android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_toStartOf="@+id/cost" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/postaladdr"
                android:layout_below="@+id/pname"
                android:layout_alignParentStart="true"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_alignEnd="@+id/pname" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/mail"
                android:layout_below="@+id/postaladdr"
                android:layout_alignParentStart="true"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_alignEnd="@+id/postaladdr" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/number"
                android:layout_below="@+id/mail"
                android:layout_alignParentStart="true"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_toStartOf="@+id/cost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="AMOUNT"
                android:id="@+id/cost"

                android:layout_below="@+id/number"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/editText7"

                android:layout_below="@+id/cost"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="welcome"
                android:id="@+id/textView4"
                android:layout_below="@id/editText7"


                android:layout_alignParentStart="true"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="4"
                android:id="@+id/editText8"
                android:layout_above="@+id/btn1"
                android:layout_below="@id/editText7"
                android:layout_toEndOf="@+id/textView4"
                android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="double nav"
                android:id="@+id/textView5"
                android:textSize="@dimen/abc_dialog_padding_material"

                android:textColor="#080808"

                android:layout_alignBottom="@+id/textView4"
                android:padding="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_alignEnd="@+id/cost" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed "
                android:id="@+id/paymentbtn"

                android:layout_below="@+id/textView5"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/abc_action_button_min_width_overflow_material"
                android:background="#403939"
                android:textColor="#ffffff"
                android:textSize="@dimen/abc_dialog_padding_material" />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
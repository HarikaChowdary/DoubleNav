<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"

        android:clickable="true"
        android:contextClickable="true"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true"
        android:scrollIndicators="bottom|right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tacticl2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="232dp">





        <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="
        Scary tactics or humorous tactics can help you get more playful:
                Here are some links that can help you make one





                "
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:background="@drawable/tacticstheme"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#fefdfd" />

                </RelativeLayout>
            </ScrollView>

            <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:id="@+id/tacticl1"
        android:onClick="browsertactic1"

                android:layout_marginBottom="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha" />




            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tacticl2"
                android:onClick="browsertactic2"
                android:layout_marginBottom="140dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"/>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
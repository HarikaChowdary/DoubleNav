<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.harikachowdary.g_me.playfulfacts"
    tools:showIn="@layout/activity_playfulfacts"
    android:isScrollContainer="true"
    android:background="@drawable/themerainbow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Changing the way you see things can help keep the mood playful"
        android:id="@+id/textView7"
        android:background="#c4f919"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="
                You might win with the risky strategy that evolutionary psychologists call “costly signaling.”"
        android:id="@+id/textView8"
        android:background="#23eddb"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="
         Creative people combine playfulness and discipline"
        android:id="@+id/textView10"
        android:background="#f78ca6"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="
         This mindest is among the most coveted character traits for potential mates, both men and women"
        android:id="@+id/textView9"
        android:background="#fb9174"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="3"
        android:layout_column="0" />

            <ImageButton
                android:layout_width="336dp"
                android:layout_height="60dp"
                android:id="@+id/factsbtn"
                android:onClick="browserfacts"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.23"
                android:src="@android:drawable/star_big_on"
                android:layout_row="7"
                android:layout_column="25"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="49dp"
                android:background="#d4fbed" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Click on star to find more facts"
            android:id="@+id/textView11"
            android:textSize="@dimen/abc_dialog_padding_material"
            android:layout_alignBottom="@+id/factsbtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="57dp"
            android:layout_row="6"
            android:layout_column="0"
            android:background="#f9ebeb" />




        </TableLayout>

    </ScrollView>


</RelativeLayout>
